{% extends 'vue/layout.twig' %}

{% block content %}
{% if example==1 %}
<article>
  <section class="row">
    <h2>Ejemplo: {{ example }}</h2>
    <div class="col-xs-12 col-sm-12 col-md-12 col-mlg-12">
      <div id="main">
      	<ul>
          <!-- Otra forma es: -->
          <!-- <li v-for="itm in people" v-text="itm"> -->
          <li v-for="itm in people">${ itm }</li> 
        </ul>
        <input type="text" v-model="name" v-on:keyup.enter="addName">
      </div>
    </div>
  </section>
</article>

<script type="text/javascript">
new Vue({
  delimiters: ['${', '}'],
  el: '#main',
  data: {
    people: ['Perro', 'Gato', 'Rat√≥n', 'Lemur']
  },
  name: '',
  methods: {
    addName: function(){
      this.people.push(this.name);
      this.name = '';
    }
  }
});
</script>
